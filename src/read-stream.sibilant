(define Read-stream Interface

  (init (stream))

  (def-generic reduce (f value stream )
    (pipe Read-stream
          (.each (=> (chunk) (assign value (f value chunk))) stream)
          (.then (-> value))))

  (def-generic each (f stream)
    (make-promise
     (pipe stream
           (.on  'data f)
           (.on 'error fail)
           (.on 'end success))))

  (def-generic drain (stream)
    (.reduce Read-stream (=> (value chunk) (+ value chunk)) "")))
